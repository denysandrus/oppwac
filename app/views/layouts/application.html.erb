<!DOCTYPE html>
<html>
<head>
  <title>World At Competition</title>
  <!--TODO: add bootstrap as vendors-->

  <link rel="stylesheet" href="//railsgirls.com/assets/bootstrap.css">
  <link rel="stylesheet" href="//railsgirls.com/assets/bootstrap-theme.css">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= javascript_include_tag 'application' %>
  <script src="//railsgirls.com/assets/bootstrap.js"></script><!--TODO: add bootstrap as vendors-->
</head>
<body>
<div class="main-container">


  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">World At Competition</a>
      </div>
      <div class="collapse navbar-collapse">
        <p class="navbar-text pull-right">
          <% if user_signed_in? %>
              <nav class="navigation">
                <ul>
                  <li><%= link_to opportunities_path do %><span class="fa fa-rocket"></span>
                    <% end %></li>

                  <li><%= link_to details_path do %><span class="fa fa-cog"></span>
                    <% end %></li>

                    <% if current_user.picture? %>
                      <li>    <%= link_to image_tag(current_user.picture_url, class: 'user-image'), edit_user_registration_path, :class => 'navbar-link' %> </li>
                    <% else %>
                      <li>     <%= link_to image_tag(image_url('user-default.png'), class: 'user-image'), edit_user_registration_path, :class => 'navbar-link' %></li>
                    <% end %>
                  <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %> </li>

                </ul>
              </nav>
          <% else %>
                  <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
          <% end %>
          </div>
    </div>
  </nav>

  <% if alert %>
      <br>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="meteor-animation"></div>
  <div class="planet-animation1"></div>
  <div class="planet-animation2"></div>
  <div class="container">
    <%= yield %>
  </div>
</div>
</body>
</html>
