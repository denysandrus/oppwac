
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <ul>
      <li><%= f.text_field :name, placeholder: "User Name" %></li>
      <li><%= f.email_field :email, :value => predefined_email, placeholder: "Email Address" %> </li>
      <li><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></li>
      <li><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repeat Password" %></li>
      <%= f.hidden_field :role_id, :value => '1' %>
      <%= f.hidden_field :organization_name, :value => ' ' %>
      <%= f.hidden_field :residence, :value => ' ' %>
      <%= f.hidden_field :organization_opportunities, :value => ' ' %>
      <%= f.hidden_field :organization_description, :value => ' ' %>
      <%= f.hidden_field :organization_website, :value => ' ' %>
      <%= f.hidden_field :verification_status, :value => 'user' %>
      <%= hidden_field_tag 'coupon',  coupon %>

      <li class="actions">
        <%= f.submit "Sign up" %>
      </li>
    </ul>
<% end %>

<%= render "devise/shared/links" %>

