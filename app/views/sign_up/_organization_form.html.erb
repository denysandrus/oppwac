
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <ul>
      <li><%= f.text_field :organization_name, placeholder: "Organization Name" %></li>
      <li><%= f.country_select :residence, placeholder: "Organization location" %></li>
      <li><%= f.select :organization_opportunities, @opp_types.map{ |o| [o.name, o.id] }  %></li>
      <li><%= f.text_field :organization_website, placeholder: "Organization website or address" %></li>
      <li><%= f.text_area :organization_description, placeholder: "Organization description" %></li>
      <li><%= f.text_field :name, placeholder: "Representative Name" %></li>
      <li><%= f.email_field :email, :value => predefined_email, placeholder: "Representative Email Address" %> </li>
      <li><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></li>
      <li><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repeat Password" %></li>
      <%= f.hidden_field :verification_status, :value => 'unverified' %>
      <%= hidden_field_tag 'coupon',  coupon %>

      <%= f.hidden_field :role_id, :value => 2 %>

      <li class="actions">
        <%= f.submit "Sign up" %>
      </li>
    </ul>
<% end %>

<%= render "devise/shared/links" %>

